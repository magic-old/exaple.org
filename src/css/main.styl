global-reset()

$body-color = #fefefe
$body-bg-color = #f0f0f2
$link-color = #38488f

$div-bg-color = #fff

// @stylint off
*
  box-sizing border-box
// @stylint on

body
  background-color $body-bg-color
  margin 0
  padding 0
  font-family "Segoe UI", "Lucida Grande", Ubuntu, Helvetica, Arial, sans-serif

h1
  margin 0

div
  width 600px
  margin 5em auto
  padding 50px
  background-color $div-bg-color
  border-radius 1em

a:link,
a:visited
  color $link-color
  text-decoration none

@media (max-width 700px)
  body
    background-color $div-bg-color

  div
    width auto
    margin 0 auto
    border-radius 0
    padding 1em

